    @model HomeDetailsViewModel

@{
    var tile = Model.Title;
    ViewBag.Title = "Employee Details";
    var photoPath = "~/IMG/" + (Model.employee.PhotoLocation ?? "VijethPhoto.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src=@photoPath asp-append-version="true"/>  @*image tag helper*@

                <h4>Employee ID : @Model.employee.Id</h4>
                <h4>Email : @Model.employee.Email</h4>
                <h4>Department : @Model.employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="index" class="btn btn-primary">Back</a>
                <a  asp-controller="Home" asp-action="Edit" asp-route-id=@Model.employee.Id class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}


        
        
    